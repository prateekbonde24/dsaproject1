#include <iostream>
#include <fstream>
#include <sstream>
#include <cstdlib>
#include <string>
#include <ctime>
#include <vector>
#include <math.h>
#include <omp.h>

#include"team_stats.h"
using namespace std;
string name;
vector <int> globalArr;
bool sortFlag = false;
int t_compare= 0;
int no_swaps=0;
int arrLength=0;
void start()
{
	//cout << name <<"********" << endl;
	cout<<"Processing fitness data of: "+name<<endl;
}

void readFile()
{
	globalArr.clear();
	arrLength = 0;
	string filename = name+".txt";
	ifstream myfile (filename.c_str());
	if (myfile.is_open())
	{
		int c=0;
		vector <string> arr;
		for (string line; getline(myfile, line);){
			if (!line.empty())
					{
					    arr.push_back(line);
		        	    c++;
					}
		         }
				arrLength = c;
				for(int i=0; i < arrLength; i++)
				  {
					  globalArr.push_back(atoi(arr[i].c_str()));
					  //cout<<globalArr[i];
				  }

			    myfile.close();
		}

	else cout << "-------------------Can't open file----------------------"<<endl;
}

void end()
{
	cout<<"End of processing fitness data for: "+name <<endl;
	name.clear();
	globalArr.clear();
	sortFlag = false;
	arrLength = 0;
}

void exitFunc()
{
	cout<<"Program terminating"<<endl;
	exit(0);
}

int main() {


	return 0;
}


